<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowAnimationStyle">@null</item>-->

        <item name="android:actionMenuTextColor">@android:color/darker_gray</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>

        <item name="cardViewStyle">@style/CardView</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
    </style>


    <!--<style name="PopupMenu" parent="Theme.AppCompat.">-->
        <!--<item name="android:popupBackground">@android:color/darker_gray</item>-->
        <!--<item name="android:textSize">12sp</item>-->
        <!--<item name="android:actionMenuTextColor">#000000</item>-->
        <!--<item name="android:textColor">#000000</item>-->
        <!--<item name="textColor"-->
        <!--<item name="android:itemTextAppearance">@style/MenuTextAppearance.Dark</item>-->


    <!--</style>-->

    <style name="AppTheme.White" parent="AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Map" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MultiLineEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:minHeight">120dp</item>
    </style>

    <style name="BtnRoundOrangeStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_round_gradient_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnOrangeStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_gradient_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnBlueStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/color_app_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="BtnRoundedBlueStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_rect_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppEditTextStyle" parent="AppTheme">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MultilineAppEditTextStyle">
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="TextAppearanceInActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="TextAppearanceActive" parent="TextAppearanceInActive">
        <item name="android:textColor">@color/color_app_blue</item>
    </style>

    <style name="dialog_right_animation_slide">
        <item name="android:windowEnterAnimation">@anim/slide_left_</item>
        <item name="android:windowExitAnimation">@anim/slide_right_</item>
    </style>

    <style name="dialog_left_animation_slide">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MenuTextAppearance.Dark">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
