<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardViewStyle">@style/CardView</item>
        <item name="tabStyle">@style/Widget.Design.TabLayout</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

    </style>

    <style name="TextViewStyle">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="dialog_animation_slide">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

</resources>
